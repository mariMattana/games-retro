<div class="varios-banners">
  <h1>VIDEO GAMES</h1>

<div class="row">
  <div class="col-md-3 videogame">
    <%= image_tag "2-6.jpg" %>
  </div>
  <div class="col-md-3">
    <%= image_tag "4-5.jpg" %>
  </div>
  <div class="col-md-3">
    <%= image_tag "7-3.jpg" %>
  </div>
  <div class="col-md-3">
    <%= image_tag "6-3.jpg" %>
  </div>
</div>

<br>
<div class= "titulo">
  <h1>JOGOS DISPON√çVEIS</h1>
  <div class="row">
    <% @games.each do |game| %>
      <%= link_to game_path(game) do %>
        <div class="card col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path game.photo, height: 250, width: 350, crop: :fill %>')">
          <div class="card-name"><%= game.name %></div>
          <div class="card-description">
            <p><%= game.description %></p>
            <p>R$ <%= "%0.2f" % [game.price] %></p>
            <p><%= game.console.name %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
