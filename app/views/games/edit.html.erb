<%= simple_form_for(@game) do |f| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 new-game-form">
      <h1>Edit Game</h1>

      <div class="form-group">
        <%= f.input :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :price, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.input :console_id, collection: @consoles, label_method: :name, value_method: :id, include_blank: false, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.input :photo %>
        <%= cl_image_tag(@game.photo, width: 400, height: 300, crop: :fill) %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
